<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._4_main.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:id="@+id/settings_terms_DrawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back_Button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:padding="10dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/setting_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="27dp"
                android:fontFamily="@font/gothic_a1_700_bold"
                android:text="이용 약관"
                android:textColor="#508EF9"
                android:textSize="15dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/settings_terms_service_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15.5dp"
            android:layout_marginEnd="15.5dp"
            android:background="@drawable/setting_block_shadow"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/setting_block">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="서비스 이용약관"
                    android:textSize="17dp"
                    android:textColor="#508EF9"
                    android:fontFamily="@font/gothic_a1_700_bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/setting_back"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="18.5dp"
                    android:layout_gravity="center"
                    android:rotation="180"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_privacy_policy_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginStart="15.5dp"
            android:layout_marginEnd="15.5dp"
            android:background="@drawable/setting_block_shadow"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/setting_block">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="개인정보 수집·이용 동의"
                    android:textSize="17dp"
                    android:textColor="#508EF9"
                    android:fontFamily="@font/gothic_a1_700_bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/setting_back"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="18.5dp"
                    android:layout_gravity="center"
                    android:rotation="180"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginStart="15.5dp"
            android:layout_marginEnd="15.5dp"
            android:background="@drawable/setting_block_shadow"
            android:padding="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/setting_block">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="개인정보 제 3자 제공 동의"
                    android:textSize="17dp"
                    android:textColor="#508EF9"
                    android:fontFamily="@font/gothic_a1_700_bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/setting_back"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="18.5dp"
                    android:layout_gravity="center"
                    android:rotation="180"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:outlineProvider="none"
        android:background="#FFF"
        android:layout_gravity="end">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/settings_drawer_back_Button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:padding="10dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/setting_back"/>

            <TextView
                android:id="@+id/settings_drawer_title_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="17dp"
                android:fontFamily="@font/gothic_a1_700_bold"
                android:text="서비스 이용약관"
                android:textColor="#508EF9"
                android:textSize="15dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/settings_drawer_terms_service_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFF">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/settings_drawer_terms_service_inner_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서비스 이용약관"
                        android:textSize="17dp"
                        android:fontFamily="@font/gothic_a1_700_bold"
                        android:textColor="#508EF9"/>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_drawer_privacy_policy_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFF">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/settings_drawer_privacy_policy_inner_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개인정보 수집·이용 동의"
                        android:textSize="17dp"
                        android:fontFamily="@font/gothic_a1_700_bold"
                        android:textColor="#508EF9"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


    </LinearLayout>






</androidx.drawerlayout.widget.DrawerLayout>