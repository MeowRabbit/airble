<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._4_main.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <stm.airble._0_public.NestedScrollableHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2.5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings_airble_shared_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="7dp"
                android:layout_marginStart="15.5dp"
                android:layout_marginEnd="15.5dp"
                android:background="@drawable/setting_block_shadow"
                android:padding="4dp">

                <LinearLayout
                    android:id="@+id/settings_airble_shared_inner_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_block"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/settings_airble_shared_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공유하기"
                        android:textSize="17dp"
                        android:textColor="#508EF9"
                        android:fontFamily="@font/gothic_a1_700_bold"/>

                    <TextView
                        android:id="@+id/settings_airble_shared_key_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="qkrrlqja710@gmail.com"
                        android:textSize="17dp"
                        android:textColor="#508EF9"
                        android:fontFamily="@font/gothic_a1_700_bold"
                        android:gravity="end"
                        android:alpha="0.7"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_airble_shared_list_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="7dp"
                android:layout_marginStart="15.5dp"
                android:layout_marginEnd="15.5dp"
                android:background="@drawable/setting_block_shadow"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/setting_block">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공유된 사람"
                        android:textSize="17dp"
                        android:textColor="#508EF9"
                        android:fontFamily="@font/gothic_a1_700_bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#55508EF9"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/settings_airble_shared_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/settings_airble_null_shared_TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="공유된 사람이 없습니다."
                        android:textSize="16dp"
                        android:textColor="#508EF9"
                        android:fontFamily="@font/gothic_a1_700_bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="start"
                        android:alpha="0.7" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </stm.airble._0_public.NestedScrollableHost>


</LinearLayout>