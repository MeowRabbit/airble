<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._4_main._5_setting.dialog.Reset_Dialog_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="123dp"
        android:orientation="vertical"
        android:background="@drawable/home_option_rename_block_1"
        android:layout_marginBottom="1dp"
        android:gravity="center">

        <TextView
            android:id="@+id/title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름을 변경하시겠습니까?"
            android:textColor="@color/app_main_font_color"
            android:textSize="17dp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/device_rename_EditText"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textSize="17dp"
            android:textColor="@color/app_main_font_color"
            android:fontFamily="@font/gothic_a1_500_medium"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="43dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:inputType="text"
            android:background="@drawable/home_option_rename_edit_text_block"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_home_option_rename_LinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_option_rename_block_2"
            android:gravity="center">

            <TextView
                android:id="@+id/main_home_option_rename_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="17dp"
                android:textColor="@color/app_main_font_color"
                android:fontFamily="@font/gothic_a1_500_medium"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/main_home_option_rename_cancel_LinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/home_option_rename_block_3"
            android:gravity="center">

            <TextView
                android:id="@+id/main_home_option_rename_cancel_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="17dp"
                android:textColor="@color/app_main_font_color"
                android:fontFamily="@font/gothic_a1_500_medium"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>