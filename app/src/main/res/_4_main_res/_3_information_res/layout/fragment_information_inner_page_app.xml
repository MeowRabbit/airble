<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._4_main.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/information_inner_ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp">

            <View
                android:id="@+id/standard_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/information_app_version_out_ConstraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="9dp"
                android:orientation="vertical"
                android:background="@drawable/information_item_block_shadow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/information_app_version_in_ConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:background="@drawable/information_item_block_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/information_app_version_title_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="# APP 정보"
                        android:textColor="@color/app_main_font_color"
                        android:lineSpacingExtra="2.5sp"
                        android:fontFamily="@font/gothic_a1_700_bold"
                        android:textSize="17sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ScrollView
                        android:id="@+id/information_app_version_ScrollView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingTop="64dp"
                        android:paddingBottom="12dp"
                        app:layout_constraintTop_toTopOf="@id/information_app_version_title_TextView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:src="@drawable/app_icon"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:id="@+id/information_app_version_TextView_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="에어블은 우리가 생활하는 실내공간의 공기질을 측정하여 실내 공기질 정보를 제공합니다."
                                android:textColor="@color/app_main_font_color"
                                android:lineSpacingExtra="2.5sp"
                                android:fontFamily="@font/gothic_a1_700_bold"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:id="@+id/information_app_version_TextView_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="버전 : 0.8.3"
                                android:textColor="@color/app_main_font_color"
                                android:lineSpacingExtra="2.5sp"
                                android:fontFamily="@font/gothic_a1_700_bold"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"/>

                        </LinearLayout>

                    </ScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/information_app_version_Touch_View"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#00000000"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/test_1_out_ConstraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="4dp"
                android:orientation="vertical"
                android:background="@drawable/information_item_block_shadow"
                app:layout_constraintLeft_toRightOf="@id/information_app_version_out_ConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/standard_view">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/test_1_in_ConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:background="@drawable/information_item_block_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/test_1_title_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="# 미세먼지 데이터"
                        android:textColor="@color/app_main_font_color"
                        android:lineSpacingExtra="2.5sp"
                        android:fontFamily="@font/gothic_a1_700_bold"
                        android:textSize="17sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ScrollView
                        android:id="@+id/test_1_ScrollView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingTop="64dp"
                        android:paddingBottom="12dp"
                        app:layout_constraintTop_toTopOf="@id/test_1_title_TextView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:src="@drawable/information_k_eco"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:id="@+id/test_1_TextView_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="데이터는 실시간 관측된 자료이며 측정소 현지 사정이나 데이터의 수신상태에 따라 미수신 될 수 있음."
                                android:textColor="@color/app_main_font_color"
                                android:lineSpacingExtra="2.5sp"
                                android:fontFamily="@font/gothic_a1_700_bold"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:id="@+id/test_1_TextView_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="데이터 출처 : 환경부/한국환경공단"
                                android:textColor="@color/app_main_font_color"
                                android:lineSpacingExtra="2.5sp"
                                android:fontFamily="@font/gothic_a1_700_bold"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"/>

                        </LinearLayout>

                    </ScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/test_1_Touch_View"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#00000000"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/test_2_out_ConstraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="4.5dp"
                android:orientation="vertical"
                android:background="@drawable/information_item_block_shadow"
                app:layout_constraintLeft_toRightOf="@id/test_1_out_ConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/standard_view">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/test_2_in_ConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:background="@drawable/information_item_block_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/test_2_title_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="# test 2"
                        android:textColor="@color/app_main_font_color"
                        android:lineSpacingExtra="2.5sp"
                        android:fontFamily="@font/gothic_a1_700_bold"
                        android:textSize="17sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ScrollView
                        android:id="@+id/test_2_ScrollView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingTop="64dp"
                        android:paddingBottom="12dp"
                        app:layout_constraintTop_toTopOf="@id/test_2_title_TextView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:src="@drawable/app_icon"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:id="@+id/test_2_TextView_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="에어블은 우리가 생활하는 실내공간의 공기질을 측정하여 실내 공기질 정보를 제공합니다."
                                android:textColor="@color/app_main_font_color"
                                android:lineSpacingExtra="2.5sp"
                                android:fontFamily="@font/gothic_a1_700_bold"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:id="@+id/test_2_TextView_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="버전 : 0.8.3"
                                android:textColor="@color/app_main_font_color"
                                android:lineSpacingExtra="2.5sp"
                                android:fontFamily="@font/gothic_a1_700_bold"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"/>

                        </LinearLayout>

                    </ScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/test_2_Touch_View"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#00000000"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>