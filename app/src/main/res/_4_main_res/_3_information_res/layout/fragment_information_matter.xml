<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._4_main.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_color"
        android:layout_marginBottom="0dp">

        <ImageButton
            android:id="@+id/back_Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00000000"
            android:padding="7dp"
            android:scaleType="fitStart"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="대기질 정보"
            android:textColor="#FFF"
            android:textSize="24sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/information_matter_find_dust_RelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/information_matter_test_block">

                    <TextView
                        android:id="@+id/information_matter_find_dust_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:text="미세먼지"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/information_matter_vocs_RelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/information_matter_test_block">

                    <TextView
                        android:id="@+id/information_matter_vocs_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:text="휘발성유기화합물질"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/information_matter_co_RelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/information_matter_test_block">

                    <TextView
                        android:id="@+id/information_matter_co_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:text="일산화탄소"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/information_matter_co2_RelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/information_matter_test_block">

                    <TextView
                        android:id="@+id/information_matter_co2_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="이산화탄소"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/information_matter_temp_RelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/information_matter_test_block">

                    <TextView
                        android:id="@+id/information_matter_temp_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:text="온도"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/information_matter_humi_RelativeLayout"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/information_matter_test_block">

                    <TextView
                        android:id="@+id/information_matter_humi_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:text="습도"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>