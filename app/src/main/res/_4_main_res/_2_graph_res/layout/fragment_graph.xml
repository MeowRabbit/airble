<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._4_main.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="109dp">

            <TextView
                android:id="@+id/main_graph_device_name_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기기 명 1"
                android:textSize="16dp"
                android:textColor="#646464"
                android:fontFamily="@font/gothic_a1_600_semi_bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:id="@+id/main_graph_device_outside_list_LinearLayout"
                android:layout_width="22dp"
                android:layout_height="58dp"
                android:background="@drawable/home_device_select_background_block"
                android:layout_marginTop="23dp"
                android:layout_marginStart="49dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <HorizontalScrollView
                    android:id="@+id/main_graph_device_list_HorizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginEnd="5dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/main_graph_device_inside_list_LinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="26dp"
                        android:paddingEnd="5dp"
                        android:layout_gravity="center_vertical"
                        tools:ignore="RtlSymmetry">

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/home_device_block"
                            android:text="기기"
                            android:textSize="13dp"
                            android:textColor="@color/home_device_select_font_color"
                            android:fontFamily="@font/gothic_a1_700_bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"/>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/home_device_block"
                            android:text="기기"
                            android:textSize="13dp"
                            android:textColor="@color/home_device_select_font_color"
                            android:fontFamily="@font/gothic_a1_700_bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"/>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/home_device_block"
                            android:text="기기"
                            android:textSize="13dp"
                            android:textColor="@color/home_device_select_font_color"
                            android:fontFamily="@font/gothic_a1_700_bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="7dp"/>

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_device_select_background_screen_block"/>

            </RelativeLayout>


            <Button
                android:id="@+id/main_graph_device_select_Button"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginTop="23dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/home_device_select_block"
                android:text="장소"
                android:textSize="13dp"
                android:textColor="@color/home_device_select_font_color"
                android:fontFamily="@font/gothic_a1_700_bold"
                android:outlineProvider="none"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_graph_calendar_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/main_graph_calendar_RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="17dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/main_graph_before_month_Button"
                                android:layout_width="36dp"
                                android:layout_height="22dp"
                                android:background="#00FFFFFF"
                                android:src="@drawable/option_close"
                                android:scaleType="fitCenter"
                                android:rotation="180"
                                android:paddingEnd="6dp"
                                android:layout_marginEnd="5dp"
                                app:tint="@color/background_dark_blue"
                                android:layout_gravity="center_vertical"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:id="@+id/main_graph_calendar_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2023년 2월"
                                android:textSize="15dp"
                                android:textColor="#FFF"
                                android:fontFamily="@font/gothic_a1_700_bold"
                                android:gravity="center"
                                android:background="@drawable/graph_calendar_block"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="2dp"
                                android:includeFontPadding="false"
                                android:layout_gravity="center_vertical"/>

                            <ImageButton
                                android:id="@+id/main_graph_next_month_Button"
                                android:layout_width="36dp"
                                android:layout_height="22dp"
                                android:background="#00FFFFFF"
                                android:src="@drawable/option_close"
                                android:scaleType="fitCenter"
                                android:paddingEnd="6dp"
                                android:layout_marginStart="5dp"
                                app:tint="@color/background_dark_blue"
                                android:layout_gravity="center_vertical"
                                tools:ignore="RtlSymmetry" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <View
                                        android:layout_width="35dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/graph_calendar_holiday_background_block"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <View
                                        android:layout_width="35dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/graph_calendar_holiday_background_block"/>

                                </LinearLayout>

                            </LinearLayout>

                            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                                android:id="@+id/main_graph_MaterialCalendarView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:mcv_tileWidth="match_parent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="4dp"/>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_graph_graph_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/main_graph_ViewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/main_graph_touch_window_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="109dp"
        android:background="#00A0FFFF"/>

</RelativeLayout>