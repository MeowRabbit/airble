<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._5_add_airble.AddAirbleActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="101dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/add_airble_page_4_TextView_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="에어블 이름·장소"
                    android:textSize="40dp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/gothic_a1_700_bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/add_airble_page_4_TextView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력하기"
                android:textSize="40dp"
                android:textColor="#FFF"
                android:fontFamily="@font/gothic_a1_700_bold"
                android:layout_marginTop="-15dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/add_airble_page_4_TextView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기기와의 WIFI 연결을 끊어주세요.\n마지막으로 추가된 기기의 이름·장소를 정해주세요."
            android:textSize="13dp"
            android:textColor="#FFF"
            android:fontFamily="@font/gothic_a1_500_medium"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="96dp"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        android:background="@drawable/add_airble_page_1_connect_device_block"
        android:gravity="center">


        <EditText
            android:id="@+id/add_airble_page_4_EditText"
            android:layout_width="match_parent"
            android:layout_height="26.3dp"
            android:hint="airble_123456789012"
            android:textColorHint="#FFF"
            android:textSize="13.5dp"
            android:textColor="#FFF"
            android:fontFamily="@font/gothic_a1_500_medium"
            android:background="@drawable/add_airble_page_1_connect_device_block"
            android:backgroundTint="#508EF9"
            android:gravity="center_vertical"
            android:paddingStart="13dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:singleLine="true"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/add_airble_add_airble_TextView"
            android:layout_width="123dp"
            android:layout_height="26.3dp"
            android:text="기기 추가"
            android:textSize="17dp"
            android:textColor="#FFF"
            android:fontFamily="@font/gothic_a1_500_medium"
            android:gravity="center"
            android:background="@drawable/add_airble_page_1_connect_device_block"
            android:backgroundTint="#508EF9"
            android:layout_marginTop="12dp"/>


    </LinearLayout>


</LinearLayout>