<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._3_registration.RegistrationActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="101dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/registration_page_3_TextView_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선택된 Wi-Fi"
                    android:textSize="40dp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/gothic_a1_700_bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/registration_page_3_TextView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 입력하기"
                android:textSize="40dp"
                android:textColor="#FFF"
                android:fontFamily="@font/gothic_a1_700_bold"
                android:layout_marginTop="-15dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/registration_page_3_TextView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연결된 Wi-Fi 공유기의 비밀번호를 입력해주세요.\n공유기가 연결되어야 기기와 데이터를 연동할 수 있어요!"
            android:textSize="13dp"
            android:textColor="#FFF"
            android:fontFamily="@font/gothic_a1_500_medium"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="105dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/registration_page_1_connect_device_block"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="22dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <View
                    android:layout_width="31dp"
                    android:layout_height="22.5dp"
                    android:background="@drawable/registration_page_2_wifi_icon"/>

                <TextView
                    android:id="@+id/registration_page_3_SSID_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공유기 이름"
                    android:textColor="#508EF9"
                    android:fontFamily="@font/gothic_a1_500_medium"
                    android:textSize="17dp"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/registration_page_3_PW_EditText"
                android:layout_width="match_parent"
                android:layout_height="26.3dp"
                android:hint="비밀번호"
                android:textColorHint="#FFF"
                android:textSize="13.5dp"
                android:textColor="#FFF"
                android:fontFamily="@font/gothic_a1_500_medium"
                android:background="@drawable/registration_page_1_connect_device_block"
                android:backgroundTint="#508EF9"
                android:gravity="center_vertical"
                android:paddingStart="13dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:singleLine="true"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/registration_page_3_connect_TextView"
                android:layout_width="123dp"
                android:layout_height="26.3dp"
                android:text="연 결 하 기"
                android:textSize="17dp"
                android:textColor="#FFF"
                android:fontFamily="@font/gothic_a1_500_medium"
                android:gravity="center"
                android:background="@drawable/registration_page_1_connect_device_block"
                android:backgroundTint="#508EF9"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="22dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>